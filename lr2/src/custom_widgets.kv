<Entry>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<EntryLabel>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<Table>:
    id: table
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<MainActionBar>:
    pos: 0, 0
    ActionView:
        ActionPrevious:
            title: ''
            with_previous: False

        ActionButton:
            text: 'Add entry'
            on_press:
                app.screen_manager.transition.direction = 'left'
                app.screen_manager.current = 'new_entry'
            
        ActionButton:
            text: 'Save'
            on_press: 
                app.screen_manager.transition.direction = 'left'
                app.screen_manager.current = 'file_choose'

        ActionButton:
            text: 'Load'
            on_press: 
                app.screen_manager.transition.direction = 'left'
                app.screen_manager.current = 'file_choose'

        ActionButton:
            text: 'Clear Filters'
            on_press: app.clear()

        ActionButton:
            text: '< Previous'
            on_press: app.previous()

        ActionButton:
            text: 'Next >'
            on_press: app.next()

<FileChooserActionBar>:
    pos: 0, 0
    ActionView:
        ActionPrevious:
            title: 'return'
            with_previous: True
            on_press: 
                app.screen_manager.transition.direction = 'right'
                app.screen_manager.current = 'main'

<FileChooserIconView>:
    canvas.before:
        Color:
            rgb: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    id: filechooser
    on_selection: 
        app.screen_manager.transition.direction = 'right'
        app.screen_manager.current = 'main'
        app.load(filechooser.selection)

<AddEntryActionBar>:
    pos: 0, 0
    ActionView:
        ActionPrevious:
            title: 'return'
            with_previous: True
            on_press:
                app.screen_manager.transition.direction = 'right'
                app.screen_manager.current = 'main'

        ActionButton:
            text: 'Confirm'
            on_press:
                PROMPT_BLOCK = app.screen_manager.current_screen.children[1]
                app.screen_manager.transition.direction = 'right'
                app.screen_manager.current = 'main'
                app.add_entry(PROMPT_BLOCK.name.text, PROMPT_BLOCK.course.text, PROMPT_BLOCK.group.text, PROMPT_BLOCK.completed.text, PROMPT_BLOCK.overall.text, PROMPT_BLOCK.lang.text)