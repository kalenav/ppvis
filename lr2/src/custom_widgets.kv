<Entry>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<EntryLabel>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<Table>:
    id: table
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<MainActionBar>:
    pos: 0, 0
    ActionView:
        ActionPrevious:
            title: 'the the'
            with_previous: False
            
        ActionButton:
            text: 'Save'
            on_press: 
                app.screen_manager.transition.direction = 'left'
                app.screen_manager.current = 'file_choose'

        ActionButton:
            text: 'Load'
            on_press: 
                app.screen_manager.transition.direction = 'left'
                app.screen_manager.current = 'file_choose'

        ActionButton:
            text: 'Clear Filters'
            on_press: app.clear()

        ActionButton:
            text: '< Previous'
            on_press: app.previous()

        ActionButton:
            text: 'Next >'
            on_press: app.next()

<FileChooserActionBar>:
    pos: 0, 0
    ActionView:
        ActionPrevious:
            title: 'the the return'
            with_previous: True
            on_press: 
                app.screen_manager.transition.direction = 'right'
                app.screen_manager.current = 'main'

<FileChooserIconView>:
    canvas.before:
        Color:
            rgb: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    id: filechooser
    on_selection: 
        app.screen_manager.current = 'main'
        app.load(filechooser.selection)
